.entry-markdown, .entry-preview
    position        absolute
    width           50%
    height          100%
    background      #FFF
    box-sizing      border-box
    border          1px solid #CCC

.entry-preview-content
    overflow        auto

.entry-markdown
    left            0

.entry-preview
    left            50%

.entry-markdown, .entry-preview
    overflow        hidden

.entry-markdown-content, .entry-preview-content
    height          100%

#entry-markdown
    height          100%

.rendered-markdown
    padding         1px 10px