blockquote:before, blockquote:after, q:before, q:after {content:'';content:none;}
table {table-layout:fixed;border-collapse:collapse;border-spacing:0;}
a img {border:none;}

body {font-size:18px;color:$text-color;}
body,input,select,textarea,button {font-weight:300;font-family:"Open Sans", arial, sans-serif;}

p
    margin      1em 0
    line-height 1.2em

h1, h2, h3, h4, h5, h6

    margin  0 0 20px 0
    color   darken($text-color, 20%)
    font-weight 300
    line-height 1.5em

h1
    font-size   48px


h2
    font-size   36px


h3
    margin-bottom 10px
    font-size     24px

h4
    font-size   20px

h5
    font-size   18px

h6
    font-size   16px

blockquote
    margin      20px 0
    border-left 10px solid darken($bg-color, 5%)
    padding     5px 10px
    font-size   0.9em

li ul, li ol {margin:0;}
ul, ol {margin:0 1.5em 1.5em 0;padding-left:1.5em;}
ul {list-style-type:disc;}
ol {list-style-type:decimal;}
dl {margin:0 0 1.5em 0;}
dl dt {font-weight:bold;}
dd {margin-left:1.5em;}

del {color:#666;}
pre {margin:1.5em 0;overflow:auto;border:1px solid #E8E8E8;background:#FAFAFA;padding:10px;}
pre, code, tt {font-size:0.9em;font-family:"Oxygen Mono","YaHei Consolas Hybrid","Consolas","Lucida Console","Bitstream Vera Sans Mono","Courier New","Courier","monospace","宋体";white-space:pre;}

.small {font-size:.8em;margin-bottom:1.875em;line-height:1.875em;}
.large {font-size:1.2em;line-height:2.5em;margin-bottom:1.25em;}
