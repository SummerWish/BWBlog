$focus-color = #FFDF00
$focus-bg-color = lighten($focus-color, 90%)
$focus-border = 1px solid $focus-color
$focus-box-shadow = 0 0 5px $focus-color

$bg-color = #F8F8F8
$text-color = #222

$link-color = #119EEA
$link-color-hover = lighten($link-color, 20%)

$link-dark-color = #0DC6FB
$link-dark-color-hover = lighten($link-dark-color, 10%)

$ui-border-color = #CCC
$ui-bg-color = $bg-color
$ui-border-color-hover = darken($ui-border-color, 10%)
$ui-bg-color-hover = lighten($ui-bg-color, 80%)

$button-color = lighten($ui-border-color, 60%)
$button-color-hover = darken($button-color, 8%)
$button-color-active = darken($button-color, 16%)
$button-def-color = #FF6A6A
$button-def-color-hover = darken($button-def-color, 15%)
$button-def-color-active = darken($button-def-color, 30%)

$textbox-border-color = $ui-border-color
$textbox-bg-color = $ui-bg-color
$textbox-hover-border-color = $ui-border-color-hover
$textbox-hover-bg-color = $ui-bg-color-hover